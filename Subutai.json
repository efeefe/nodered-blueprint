{
    "name": "${environmentName}",
    "description": "node-red",
    "version": "0.20",
    "author": "https://github.com/efeefe",
    "containers": [
        {
            "hostname": "${webContainerName}",
            "template": "debian-stretch",
            "peer-criteria": "HTTP-GROUP",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "https",
                    "domain": "${domainName}",
                    "internal-port": "1880",
                    "external-port": "443",
                    "http_redirect": true,
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "HTTP-GROUP"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/efeefe/nodered-blueprint/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "domain_name",
                "value": "${domainName}"
            },
            {
                "key": "adminUser",
                "value": "${adminUser}"
            },
            {
                "key": "adminPassword",
                "value": "${adminPassword}"
            }
        ],
        "groups": [
            {
                "name": "node-red",
                "hostnames": [
                    "${webContainerName}"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "nodered",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName": {
            "description": "Enter the application domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "webContainerName": {
            "description": "Enter the container's hostname",
            "type": "string",
            "default": "nodered",
            "validation": "[a-zA-Z0-9]+"
        },
        "adminUser": {
            "description": "Enter the admin username",
            "type": "string",
            "default": "admin",
            "validation": "[a-zA-Z0-9]+"
        },
        "adminPassword": {
            "description": "Enter the admin password",
            "type": "string",
            "default": "mypassword",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "MEDIUM",
            "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
        }
    }
}
